<div class="address-list u-clearfix">
    {{#each this}}
        <div class="address-list__item u-clearfix" style="display: none" data-id="{{id}}" data-is-default="{{is_default}}" data-region-id="{{#if district_id}}{{district_id}}{{else}}{{city_id}}{{/if}}">
            <div class="address-list__checkbox u-fl{{#if is_default}} _active{{/if}}">
                <div>
                    <span class="u-mr_5">{{consignee}}</span>
                    <span class="u-mr_5">{{mobile}}</span>
                </div>
                <div class="u-ellipse">{{province_name}} {{city_name}} {{district_name}} {{address}}</div>
                <div class="address-list__action">
                    {{#if is_default}}{{else}}
                        <a class="u-black-link j-address-set-default" href="javascript:;">设为默认</a>
                        <span class="u-ml_10 u-mr_10 u-color_gray">|</span>
                    {{/if}}
                    <a class="u-black-link j-address-update" href="javascript:;">修改</a>
                    <span class="u-ml_10 u-mr_10">|</span>
                    <a class="u-black-link j-address-del" href="javascript:;">删除</a>
                </div>
            </div>
        </div>
    {{/each}}
    <div class="address-list__ft">
        <a href="javascript:;" class="btn btn-primary j-address-create">使用新地址</a>
        <a href="javascript:" class="j-all-address u-ml_20 u-fr">查看所有地址</a>
        <a href="/member#j-address-list" class="u-ml_20 address-list__manage u-fr">管理收货地址</a>
    </div>
</div>
